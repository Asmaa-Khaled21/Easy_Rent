<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity">

    <ImageView
        android:id="@+id/Rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="40dp"
        android:src="@drawable/rectangle"
        android:paddingTop="30dp"
        android:background="@color/white_simi"
        />

    <TextView
        android:id="@+id/House_NUMBER_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/Rectangle"
        app:layout_constraintTop_toTopOf="@+id/Rectangle"
        app:layout_constraintBottom_toBottomOf="@id/Rectangle"
        android:text="House Number"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_house_number"
        android:drawablePadding="10dp"
        android:padding="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/Rectangle"
        app:layout_constraintTop_toTopOf="@id/Rectangle"
        app:layout_constraintBottom_toBottomOf="@id/Rectangle"
        android:textColor="@color/black"
        android:text="1500EG"
        android:padding="20dp"
        />
    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/Rectangle"
        app:layout_constraintEnd_toEndOf="@id/Rectangle"
        app:layout_constraintTop_toBottomOf="@id/Rectangle"
        android:src="@drawable/ic_linee"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/Payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:textColor="@color/black"
        android:text="Payment method"
        android:paddingTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Payment_method"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fawry"
            android:textColor="@color/Dark_Blue"
            android:drawableTop="@drawable/ic_fawry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:background="@color/white_simi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit card"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_creditcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp"
            android:gravity="center"
            android:layout_weight=".5"
            android:background="@color/Dark_Blue"
            android:drawablePadding="10dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>