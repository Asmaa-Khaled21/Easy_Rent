<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity"
    android:backgroundTint="@color/Background">

<LinearLayout
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:background="@drawable/rectangle"
    >
    <TextView
        android:id="@+id/House_NUMBER_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House Number"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_house_number"
        android:drawablePadding="10dp"
        android:layout_weight=".7"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="1500EG"
        android:layout_weight=".3"
        />
</LinearLayout>


    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/linear1"
        app:layout_constraintEnd_toEndOf="@id/linear1"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        android:src="@drawable/ic_linee"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/Payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:textColor="@color/black"
        android:text="Payment method"
        android:paddingTop="10dp"
        />

    <LinearLayout
        android:id="@+id/Linear_Pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Payment_method"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/FawrytText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fawry"
            android:textColor="@drawable/button_text_color"
            android:drawableTop="@drawable/ic_fawry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:background="@drawable/rectangle"
            />
        <TextView
            android:id="@+id/CreditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Credit card"
            android:textColor="@drawable/button_text_color"
            android:drawableTop="@drawable/ic_creditcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp"
            android:gravity="center"
            android:layout_weight=".5"
            android:background="@drawable/rectangle"
            android:drawablePadding="10dp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frafment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Linear_Pay"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>